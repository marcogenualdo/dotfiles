root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_style = space

[*.json]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{html,htm,css,sass,scss,svg}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space

[*.rs]
indent_style = space

[*.scala]
indent_style = space
indent_size = 2

[*.{lua,vim}]
indent_style = space
indent_size = 2

[*.tf]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2

[*.graphql]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tabs
indent_size = 4
